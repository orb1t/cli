package com.pyxis.cli;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collection;
import java.util.Iterator;

public class Options implements Iterable<Option>
{
    private final Collection<Option> options = new ArrayList<Option>();

    public Options(Option... options)
    {
        this( Arrays.asList( options ) );
    }

    public Options(Collection<Option> options)
    {
        addAll( options );
    }

    public void add(Option option)
    {
        this.options.add( option );
    }

    public void addAll(Collection<Option> options)
    {
        this.options.addAll( options );
    }

    public Iterator<Option> iterator()
    {
        return options.iterator();
    }

    public Option getOption(String opt)
    {
        for (Option option : options)
        {
            if (option.matches( opt )) return option;
        }

        return null;
    }
}
