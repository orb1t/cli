package com.pyxis.cli.gnu;

import com.pyxis.cli.CommandLineStyle;
import com.pyxis.cli.CommandLineDescription;
import com.pyxis.cli.Option;
import com.pyxis.cli.OptionBuilder;
import com.pyxis.cli.Options;
import com.pyxis.cli.Parser;
import com.pyxis.cli.ParsingException;
import com.pyxis.cli.Specifier;

import java.io.IOException;

public class GnuCommandLineStyle implements CommandLineStyle
{
    private Parser parser;
    private Specifier specifier;
    private CommandLineDescription description;

    public GnuCommandLineStyle()
    {
        parser = new GnuParser();
        specifier = new GnuSpecifier();
        description = new GnuCommandLineDescription();
    }

    public void build(OptionBuilder builder, String... options)
    {
        specifier.build( builder, options );
    }

    public String[] parse(Options options, String... args) throws ParsingException
    {
        return parser.parse( options, args );
    }

    public void appendBanner(String banner)
    {
        description.appendBanner( banner );
    }

    public void appendOption(Option option)
    {
        description.appendOption( option );
    }

    public void appendTo(Appendable appendable) throws IOException
    {
        description.appendTo( appendable );
    }
}
